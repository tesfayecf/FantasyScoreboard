---
import Layout from "../layouts/Layout.astro";
---

<Layout currentPage="test">
  <body class="bg-gray-900 text-white min-h-screen">
    <div class="container mx-auto px-4 py-8">
      <div class="mb-4">
        <input
          type="text"
          placeholder="Search for players"
          class="w-full p-2 rounded bg-gray-800 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div class="overflow-x-auto">
        <table class="w-full border-collapse table-auto hidden md:table">
          <thead>
            <tr class="bg-gray-800">
              <th class="p-3 text-left">Name</th>
              <th class="p-3 text-left">Position</th>
              <th class="p-3 text-left">IndusPoints</th>
              <th class="p-3 text-left">Points</th>
              <th class="p-3 text-left">Team Points</th>
              <th class="p-3 text-left">Team Value</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b border-gray-700">
              <td class="p-3 flex items-center">
                <img
                  src="/placeholder.svg?height=40&width=40"
                  alt="lauriiins"
                  class="w-10 h-10 rounded-full mr-3"
                />
                lauriiins
              </td>
              <td class="p-3">4</td>
              <td class="p-3 text-purple-400">10</td>
              <td class="p-3">57</td>
              <td class="p-3 text-purple-400">211</td>
              <td class="p-3 text-green-400">$170,395,793</td>
            </tr>
            <!-- Add more rows here for other players -->
          </tbody>
        </table>
      </div>

      <div class="grid grid-cols-1 gap-4 md:hidden">
        <div class="bg-gray-800 p-4 rounded-lg shadow">
          <div class="flex items-center space-x-3 mb-3">
            <img
              src="/placeholder.svg?height=40&width=40"
              alt="lauriiins"
              class="w-10 h-10 rounded-full"
            />
            <div class="font-bold">lauriiins</div>
          </div>
          <div class="grid grid-cols-2 gap-2 text-sm">
            <div>Position: <span class="font-semibold">4</span></div>
            <div>
              IndusPoints: <span class="font-semibold text-purple-400">10</span>
            </div>
            <div>Points: <span class="font-semibold">57</span></div>
            <div>
              Team Points: <span class="font-semibold text-purple-400"
                >211</span>
            </div>
            <div class="col-span-2">
              Team Value: <span class="font-semibold text-green-400"
                >$170,395,793</span>
            </div>
          </div>
        </div>
        <!-- Add more card divs here for other players -->
      </div>
    </div>
  </body>
</Layout>
