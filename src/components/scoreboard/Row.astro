---
interface RowProps {
    player: Player;
}

const { player } = Astro.props as RowProps;
---

<!-- Example of a single row -->
<tr class="bg-gray-900 border-b border-gray-700 hover:bg-gray-800">
    <!-- Manager Name -->
    <td class="px-6 py-4 flex items-center text-white whitespace-nowrap">
        <div class="flex items-center space-x-3">
            <span class="text-lg font-semibold">
                {player.team.manager.managerName}
            </span>
        </div>
    </td>

    <!-- Manager Avatar -->
    <td class="px-6 py-4">
        <img
            class="w-10 h-10 rounded-full shadow-lg border-2 border-gray-600"
            src={player.team.manager.avatar}
            alt={`${player.team.manager.managerName} avatar`}
        />
    </td>

    <!-- Current Position with Badge -->
    <td class="px-6 py-4">
        <span
            class={`px-3 py-1.5 rounded-full text-sm font-bold text-white ${player.position === 1 ? "bg-red-500" : "bg-gray-600"}`}
        >
            {player.position}
        </span>
    </td>

    <!-- Previous Position with Color-coded Arrow -->
    <td class="px-6 py-4 text-gray-400">
        <span class="flex items-center">
            <svg
                class={`w-5 h-5 mr-2 ${player.position < player.previousPosition ? "text-green-400" : "text-red-400"}`}
                fill="currentColor"
                viewBox="0 0 20 20"
            >
                <path
                    d={player.position < player.previousPosition
                        ? "M5 10l7-7m0 0l7 7m-7-7v18"
                        : "M15 10l-7 7m0 0l-7-7m7 7V2"}></path>
            </svg>
            <span class="text-sm font-medium">
                {player.previousPosition}
            </span>
        </span>
    </td>

    <!-- Player Points -->
    <td class="px-6 py-4">
        <span
            class="px-3 py-1.5 rounded-full bg-yellow-500 text-white text-sm font-bold"
        >
            {player.points}
        </span>
    </td>

    <!-- Team Points -->
    <td class="px-6 py-4">
        <span
            class="px-3 py-1.5 rounded-full bg-purple-600 text-white text-sm font-bold"
        >
            {player.team.teamPoints}
        </span>
    </td>

    <!-- Team Value -->
    <td class="px-6 py-4">
        <span class="text-lg font-bold text-green-500">
            ${player.team.teamValue.toLocaleString()}
        </span>
    </td>
</tr>
