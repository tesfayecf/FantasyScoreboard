---
interface Player {
    name: string;
    imageUrl: string;
    fantasyPosition: string;
    customPosition: string;
    fantasyPoints: number;
    customPoints: number;
    averagePoints: number;
    lastPosition: number;
}

interface RowProps {
    player: Player;
}

const { player } = Astro.props as RowProps;
---

<tr
    class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600"
>
    <th
        scope="row"
        class="flex items-center px-6 py-4 text-gray-900 whitespace-nowrap dark:text-white"
    >
        <img
            class="w-10 h-10 rounded-full"
            src={player.imageUrl}
            alt={`${player.name} image`}
        />
        <div class="ps-3">
            <div class="text-base font-semibold">{player.name}</div>
        </div>
    </th>
    <td class="px-6 py-4">{player.fantasyPosition}</td>
    <td class="px-6 py-4">{player.customPosition}</td>
    <td class="px-6 py-4">{player.fantasyPoints}</td>
    <td class="px-6 py-4">{player.customPoints}</td>
    <td class="px-6 py-4">{player.averagePoints.toFixed(2)}</td>
    <td class="px-6 py-4">{player.lastPosition}</td>
</tr>
